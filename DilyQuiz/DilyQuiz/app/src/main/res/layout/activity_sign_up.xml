<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <TextView
        android:id="@+id/txStayConnected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="20dp"
        android:text="Stay Connected"
        android:textColor="#8962F7"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="10dp"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/txtEnter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="25dp"
        android:text="Enter your email and passward to get access on your account."
        android:textSize="18sp"/>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            android:background="@drawable/custom_edittext">




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please Enter..."
                android:textSize="14sp"/>


            <EditText
                android:id="@+id/etEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Enter your Email Id"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/baseline_person_24"
                android:inputType="textEmailAddress"
                android:textStyle="italic"
                android:layout_marginTop="30dp"
                android:padding="8dp"
                tools:ignore="MissingConstraints"
                android:drawablePadding="8dp"
                />
            <EditText
                android:id="@+id/etSignpassAdd"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Enter Your Password"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:inputType="textPassword"
                android:background="@drawable/custom_edittext"
                android:textStyle="italic"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:drawablePadding="8dp"
                />
            <EditText
                android:id="@+id/etcnfpass"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Confirm Password"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:inputType="textPassword"
                android:background="@drawable/custom_edittext"
                android:textStyle="italic"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:drawablePadding="8dp"
                />
            <Button
                android:id="@+id/btngoon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Go On"
                android:textSize="18dp"
                android:padding="14dp"
                android:textStyle="bold"
                app:cornerRadius = "20dp"
                android:layout_marginTop="30dp"

                />


        </LinearLayout>


    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/btngotologinPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#ffffff"
        android:textSize="18sp"
        android:text="Already have an  have an account?LogIn"
        android:textColor="#8962F7"

        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"

        android:src="@drawable/wave" />

</LinearLayout>